@model HackTheCrisis.Models.HealthCareUnit
@{
    ViewData["Title"] = "RegisterHealth";
}

<h2>Registrera som hälso- och sjukvårdsorganisation, eller omsorg</h2>

<h4>Registrera din organisation så ni kan bli kontaktade av potentiella industripartners.</h4>

<div class="form">
    <div class="form-group">
        <label asp-for="UnitType">Organisationstyp</label>
        <select asp-for="UnitType" class="form-control">
            <option selected>Välj...</option>
            <option>...</option>
        </select>
    </div>

    @*<select asp-for="UnitType" asp-items="Html.GetEnumSelectList<HealthCareUnit.HeltCareUnitType>()">
        <option selected="selected" value="">Please select</option>
    </select>*@

    <div class="form-group">
        <label asp-for="UnitName">Organisationsnamn</label>
        <input asp-for="UnitName" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ContactPerson">Kontaktperson​</label>
        <input asp-for="ContactPerson" type="text" class="form-control" id="inputContactPerson">
    </div>
    <div class="form-group">
        <label asp-for="Email" for="inputEmail">Epost</label>
        <input asp-for="Email" type="text" class="form-control" id="inputEmail">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Telefonnummer</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" id="inputZip">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="StreetAddress" for="inputAddress">Adress</label>
            <input asp-for="StreetAddress" type="text" class="form-control" id="inputAddress">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="PostalCode" for="inputZip">Postnummer</label>
            <input asp-for="PostalCode" type="text" class="form-control" id="inputZip">
        </div>
        <div class="form-group col-md-2">
            <label asp-for="City" for="inputCity">Ort</label>
            <input asp-for="City" type="datetime" class="form-control" id="inputCity">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Registrera</button>
</div>

