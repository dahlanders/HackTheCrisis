@model HackTheCrisis.Models.HealthCareUnit
@{
    ViewData["Title"] = "RegisterHealth";
}

<h2>Register Health Care Unit​</h2>

<h4>Register your Health Care Unit so that you can be contacted by potential industrial partners.​​</h4>

<div class="form">
    <div class="form-group">
        <label asp-for="UnitType">Unit type​</label>
        <select asp-for="UnitType" class="form-control">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div>

    @*<select asp-for="UnitType" asp-items="Html.GetEnumSelectList<HealthCareUnit.HeltCareUnitType>()">
        <option selected="selected" value="">Please select</option>
    </select>*@

    <div class="form-group">
        <label asp-for="UnitName">Unit name</label>
        <input asp-for="UnitName" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ContactPerson">Contact person​</label>
        <input asp-for="ContactPerson" type="text" class="form-control" id="inputContactPerson">
    </div>
    <div class="form-group">
        <label asp-for="Email" for="inputEmail">E-mail​​</label>
        <input asp-for="Email" type="text" class="form-control" id="inputEmail">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone​​</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" id="inputZip">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="StreetAddress" for="inputAddress">Address</label>
            <input asp-for="StreetAddress" type="text" class="form-control" id="inputAddress">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="PostalCode" for="inputZip">Zipcode</label>
            <input asp-for="PostalCode" type="text" class="form-control" id="inputZip">
        </div>
        <div class="form-group col-md-2">
            <label asp-for="City" for="inputCity">City​​</label>
            <input asp-for="City" type="datetime" class="form-control" id="inputCity">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</div>

