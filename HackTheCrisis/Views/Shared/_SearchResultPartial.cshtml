@model List<SearchResultViewModel>
@using System.Globalization;

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-lg-12">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>Who?</th>
                        <th>Supply/Needs</th>
                        <th>How much?</th>
                        <th>Where?</th>
                        <th>When?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                    <tr>
                        <td><strong><a href="/">@item.Organization</a></strong></td>
                        <td><strong>@item.Item</strong></td>
                        <td>@item.Quantity @item.QuantityUnit</td>
                        <td>@item.Location</td>
                        <td>
                            <time datetime="@item.CreatedDate.ToString("yyyy-MM-dd", CultureInfo.CreateSpecificCulture("sv-SE"))">
                                @item.CreatedDate.ToString("yyyy-MM-dd", CultureInfo.CreateSpecificCulture("sv-SE"))
                            </time>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <hr>
        </div>
    </div>
}